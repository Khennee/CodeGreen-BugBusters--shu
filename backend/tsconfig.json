{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "types": ["vitest/globals"],
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "paths": {
    // workaround for: https://github.com/vitest-dev/vitest/issues/4567
    "rollup/parseAst": ["./node_modules/rollup/dist/parseAst.d.ts"]
  },
  "include": ["src/**/*", "src/__tests__"],
  "exclude": ["node_modules", "dist", "vitest.config.ts", "**/**.test.ts"],
  "files": ["./src/types/express.types.ts"]
}
